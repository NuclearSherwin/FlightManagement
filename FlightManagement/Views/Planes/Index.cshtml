<table class="table table-striped">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Capacity</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var plane in Model)
    {
        <tr>
            <th scope="row">@plane.PlaneId</th>
            <td>@plane.Name</td>
            <td>@plane.Capacity</td>
            <td>
                <a class="btn btn-warning" 
                   asp-controller="Planes" asp-action="Update" asp-route-planeId="@plane.PlaneId">Update</a>
                <a class="btn btn-danger" onClick="return confirm('Are you sure you want to delete this item')"
                   asp-controller="Planes" asp-action="Delete" asp-route-planeId="@plane.PlaneId">Delete</a>
            </td> 
        </tr>
    }
    </tbody>
</table>