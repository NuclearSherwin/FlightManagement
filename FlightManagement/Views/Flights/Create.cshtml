@model FlightManagement.ViewModels.FlightMV

@{
    Layout = "_Layout";
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Flight.CustomerId"></label>
        <input type="text" asp-for="Flight.CustomerId">
        <span class="text-danger" asp-validation-for="Flight.CustomerId"></span>
    </div>
    @* <div class="form-group"> *@
    @*     <label asp-for="Flight.PlaneId"></label> *@
    @*     <input type="text" asp-for="Flight.PlaneId"> *@
    @*     <span class="text-danger" asp-validation-for="Flight.PlaneId"></span> *@
    @* </div> *@
    <div class="form-group">
        <label asp-for="Flight.FlightDate"></label>
        <input type="text" asp-for="Flight.FlightDate" class="form-control">
        <span class="text-danger" asp-validation-for="Flight.FlightDate"></span>
    </div>
    <div>        
        <label asp-for="Flight.Destination"></label>
        <input type="text" asp-for="Flight.Destination" class="form-control">
        <span class="text-danger" asp-validation-for="Flight.Destination"></span>
    </div>
    
    <div class="form-group">
            <label asp-for="Flight.PlaneId"></label>
            @Html.DropDownListFor(m=> m.Flight.PlaneId, Model.PlaneList , 
                "--Please Select the name of the plane" , new {@class= "form-control"})
            <span class="text-danger" asp-validation-for="Flight.PlaneId"></span>
        </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>