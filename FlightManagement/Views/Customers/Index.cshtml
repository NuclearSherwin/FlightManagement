<table class="table table-striped">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var customer in Model)
    {
        <tr>
            <th scope="row">@customer.CustomerId</th>
            <td>@customer.Name</td>
            <td>
                <a class="btn btn-warning" 
                   asp-controller="Customers" asp-action="Update" asp-route-customerId="@customer.CustomerId">Update</a>
                <a class="btn btn-danger" onClick="return confirm('Are you sure you want to delete this item')"
                   asp-controller="Customers" asp-action="Delete" asp-route-customerId="@customer.CustomerId">Delete</a>
            </td> 
        </tr>
    }
    </tbody>
</table>